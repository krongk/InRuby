<% title "user login" %>
<% form_tag session_path do -%>
<p><label for="login"><%= t 'activerecord.models.attributes.user.login' %> </label><br/>
<%= text_field_tag 'login' %></p>

<p><label for="password"><%= t('activerecord.models.attributes.user.password') %></label><br/>
<%= password_field_tag 'password' %></p>

<!-- Uncomment this if you want this functionality
<p><label for="remember_me">Remember me:</label>
<%= check_box_tag 'remember_me' %></p>
-->

<p><%= submit_tag t('form.login') %></p>
<% end -%>
