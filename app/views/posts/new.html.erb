<h1>New <%= t 'post'  %> </h1>

<% form_for(@post) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :category %><br />
    <%= f.select :category,ApplicationHelper::CATEGORY %>
  </p>
  <p>
    <%= f.label t('post.title') %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :document %><br />
    <%= f.text_area :document %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', posts_path %>